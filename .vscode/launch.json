  "version": "0.2.0",
  "configurations": [
    {
        "name": "account",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "dlvFlags": ["--check-go-version=false"],
        "program": "${workspaceFolder}/cmd/account",
        "args": ["-sql", "${workspaceFolder}/deployment/config/db/local_postgres.txt",
                  "--port", ":8080"],
    },
    {
      "name": "realtime",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "dlvFlags": ["--check-go-version=false"],
      "program": "${workspaceFolder}/cmd/realtime",
      "args": ["-sql", "${workspaceFolder}/deployment/config/db/local_postgres.txt",
      "--port", ":8081"],
    },
    {
      "name": "Unit Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "dlvFlags": ["--check-go-version=false"],
      "program": "${fileDirname}",
    },
    {
      "name": "Benchmark Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "dlvFlags": ["--check-go-version=false"],
      "args": ["-v", "", "-bench", ". ."]
    },
  ]
}